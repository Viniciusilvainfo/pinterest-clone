// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  posts     Post[]
  likes     Like[]
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  imageUrl    String
  link        String?
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  likes       Like[]
  
  @@map("posts")
}

model Like {
  id        Int      @id @default(autoincrement())
  userId    Int
  postId    Int
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())
  
  @@unique([userId, postId])
  @@map("likes")
}

model Log {
  id        Int      @id @default(autoincrement())
  ip        String
  method    String
  path      String
  payload   String?
  statusCode Int
  userAgent String?
  createdAt DateTime @default(now())
  
  @@map("logs")
}